<odoo>

    <template id="subscription_fields" name="Subscription form fields">

        <div class="form-group field-shareproduct">
            <label for="shareproduct">Type</label>
            <select id="shareproduct"
                class="form-control form-control-sm"
                name="shareproduct"
                autofocus="autofocus"
                onchange="compute_total_amount()"
                required="required">
                <option t-foreach="share_products or []" t-as="sp"
                    t-att-selected="'selected' if sp.id == shareproduct else None"
                    t-att-data-amount="sp.list_price"
                    t-att-data-min_qty="sp.minimum_quantity if sp.force_min_qty else 1"
                    t-att-value="sp.id">
                    <t t-esc="sp.name"/> - <t t-esc="sp.list_price" t-options="{'widget': 'monetary', 'display_currency': sp.currency_id}"/>
                </option>
            </select>
        </div>

        <div class="form-group field-number">
            <label for="number">Number</label>
            <input id="number"
                class="form-control form-control-sm"
                type="number"
                name="number"
                t-att-value="number"
                onchange="compute_total_amount()"
                required="required"/>
        </div>

        <div class="form-group field-total_amount">
            <label for="total_amount">Total</label>
            <input id="total_amount"
                class="form-control-plaintext form-control-sm"
                type="text"
                name="total_amount"
                t-att-value="str(total_amount)"
                readonly="readonly"/>
            <small t-if="total_amount_max" class="form-text text-muted">
                You cannot subscribe to more than <t t-esc="total_amount_max"/>.
            </small>
        </div>

        <script>
function compute_total_amount() {
    var sp_elem = document.getElementById('shareproduct')
    var amount = sp_elem.options[sp_elem.selectedIndex].dataset.amount
    var number = document.getElementById('number').value;
    document.getElementById('total_amount').value = number * amount;
    var min_qty = sp_elem.options[sp_elem.selectedIndex].dataset.min_qty;
    document.getElementById('number').min = min_qty
}
        </script>

    </template>

    <template id="subscribe_to_structure" name="Subscribe to Structure">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">New Subscription</t>
            <t t-set="no_breadcrumbs" t-value="True"/>
            <div class="row justify-content-center">
                <div class="col-xs-12 col-sm-10  col-md-8 col-lg-6">
                    <h3 class="mt-4 text-center">
                        New Subscription to <t t-esc="struct.name"/>
                    </h3>
                    <form class="oe_subscription_request_form" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <t t-foreach="form.fields" t-as="field_name">
                            <t t-call="{{form.fields[field_name].template}}">
                                <t t-set="name" t-value="field_name"/>
                                <t t-set="field" t-value="form.fields[field_name]"/>
                            </t>
                        </t>


                        <p class="alert alert-danger"
                            t-if="'__all__' in form.errors" role="alert">
                            <t t-esc="form.errors['__all__']"/>
                        </p>

                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
