<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="iwp_website.login" inherit_id="auth_signup.login" name="Login: Sign up - Reset Password">
        <xpath expr="//button[@type='submit']/following-sibling::div" position="replace">
            <div id="signup_title" class="text-center mt-4">
                Don't have an account ?
            </div>
            <div id="signup_container" class="text-center mt-2 mb-2">
                <a id="signup_indi" class="btn btn-secondary mt-2"
                    t-if="signup_enabled"
                    t-attf-href="/web/investor/signup?{{ keep_query() }}">
                    Sign up for individual
                </a>
                <a id="signup_comp" class="btn btn-secondary mt-2"
                    t-if="signup_enabled"
                    t-attf-href="/web/investor/company/signup?{{ keep_query() }}">
                    Sign up for company
                </a>
            </div>
            <div id="reset_container" class="text-center mt-4 mb-4 small">
                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
            </div>
        </xpath>
    </template>


    <template id="signup_investor" name="Sign up login for investor">
        <t t-call="web.login_layout">
            <t t-set="disable_footer" t-value="True"/>
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>

                <t t-call="iwp_website.investor_signup_fields"/>
                <t t-call="iwp_website.investor_fields"/>

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <div class="text-center oe_login_buttons pt-3">
                    <button type="submit" class="btn btn-primary btn-block"> Sign up</button>
                    <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">Already have an account?</a>
                    <div class="o_login_auth"/>
                </div>
            </form>
        </t>
    </template>


    <template id="signup_investor_company" name="Sign up login for company investor">
        <t t-call="web.login_layout">
            <t t-set="disable_footer" t-value="True"/>
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>

                <t t-call="iwp_website.investor_signup_fields"/>
                <h3>Company</h3>
                <t t-call="iwp_website.investor_company_fields"/>
                <h3>Representative</h3>
                <t t-call="iwp_website.investor_company_representative_fields"/>

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <div class="text-center oe_login_buttons pt-3">
                    <button type="submit" class="btn btn-primary btn-block"> Sign up</button>
                    <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">Already have an account?</a>
                    <div class="o_login_auth"/>
                </div>
            </form>
        </t>
    </template>

</odoo>
