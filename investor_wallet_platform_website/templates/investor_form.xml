<odoo>

    <template id="investor_signup_fields" name="Investor Signup form fields">
        <t t-if="not field_class" t-set="field_class" t-value="'form-group'"/>
        <t t-if="not input_class" t-set="input_class" t-value="'form-control'"/>

        <div t-attf-class="field-login {{field_class}}">
            <label for="login">Email</label>
            <input id="login"
                t-att-class="input_class"
                type="email"
                name="login"
                t-att-value="login"
                autofocus="autofocus"
                autocapitalize="off"
                required="required"/>
        </div>

        <div t-attf-class="field-confirm-login {{field_class}}">
            <label for="confirm_login">Confirm email</label>
            <input id="confirm_login"
                t-att-class="input_class"
                type="email"
                name="confirm_login"
                t-att-value="confirm_login"
                autofocus="autofocus"
                autocapitalize="off"
                required="required"/>
        </div>

        <div t-attf-class="field-password {{field_class}}">
            <label for="password">Password</label>
            <input id="password"
                t-att-class="input_class"
                type="password"
                name="password"
                required="required"/>
        </div>

        <div t-attf-class="field-confirm_password {{field_class}}">
            <label for="confirm_password">Confirm Password</label>
            <input id="confirm_password"
                t-att-class="input_class"
                type="password"
                name="confirm_password"
                required="required"/>
        </div>

    </template>


    <template id="investor_fields" name="Investor form fields">
        <t t-if="not field_class" t-set="field_class" t-value="'form-group'"/>
        <t t-if="not input_class" t-set="input_class" t-value="'form-control'"/>

        <div t-attf-class="field-firstname {{field_class}}">
            <label for="firstname">Firstname</label>
            <input id="firstname"
                t-att-class="input_class"
                type="text"
                name="firstname"
                t-att-value="firstname"
                autocapitalize="off"
                required="required"/>
        </div>

        <div t-attf-class="field-lastname {{field_class}}">
            <label for="lastname">Lastname</label>
            <input id="lastname"
                t-att-class="input_class"
                type="text"
                name="lastname"
                t-att-value="lastname"
                required="required"/>
        </div>

        <div t-attf-class="field-gender {{field_class}}">
            <label for="gender">Gender</label>
            <select id="gender"
                t-att-class="input_class"
                name="gender"
                required="required">
                <option t-foreach="genders or []" t-as="gndr"
                    t-att-selected="'selected' if gndr[0] == gender else None"
                    t-att-value="gndr[0]">
                    <t t-esc="gndr[1]"/>
                </option>
            </select>
        </div>

        <div t-attf-class="field-birthday {{field_class}}">
            <label for="birthday">Birthday</label>
            <input id="birthday"
                t-att-class="input_class"
                type="date"
                name="birthday"
                t-att-value="birthday"
                required="required"/>
        </div>

        <div t-attf-class="field-phone {{field_class}}">
            <label for="phone">Phone</label>
            <input id="phone"
                t-att-class="input_class"
                type="text"
                name="phone"
                t-att-value="phone"/>
        </div>

        <div t-attf-class="field-iban {{field_class}}">
            <label for="iban">Bank Account Number</label>
            <input id="iban"
                t-att-class="input_class"
                type="text"
                name="iban"
                t-att-value="iban"
                required="required"/>
        </div>

        <div t-attf-class="field-lang {{field_class}}">
            <label for="lang">Language</label>
            <select id="lang"
                t-att-class="input_class"
                name="lang"
                required="required">
                <option t-foreach="langs or []" t-as="language"
                    t-att-selected="'selected' if language.code == lang else None"
                    t-att-value="language.code">
                    <t t-esc="language.name"/>
                </option>
            </select>
        </div>

        <div t-attf-class="field-street {{field_class}}">
            <label for="street">Address</label>
            <input id="street"
                t-att-class="input_class"
                type="text"
                name="street"
                t-att-value="street"
                required="required"/>
        </div>

        <div t-attf-class="field-zip_code {{field_class}}">
            <label for="zip_code">Zip / Postal Code</label>
            <input id="zip_code"
                t-att-class="input_class"
                type="text"
                name="zip_code"
                t-att-value="zip_code"
                required="required"/>
        </div>

        <div t-attf-class="field-city {{field_class}}">
            <label for="city">City</label>
            <input id="city"
                t-att-class="input_class"
                type="text"
                name="city"
                t-att-value="city"
                required="required"/>
        </div>

        <div t-attf-class="field-country_id {{field_class}}">
            <label for="country_id">Country</label>
            <select id="country_id"
                t-att-class="input_class"
                name="country_id"
                required="required">
                <option t-foreach="countries or []" t-as="country"
                    t-att-selected="'selected' if country.id == country_id else None"
                    t-att-value="country.id">
                    <t t-esc="country.name"/>
                </option>
            </select>
        </div>

    </template>


