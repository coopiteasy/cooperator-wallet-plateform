<odoo>

    <template id="investor_details" name="Investor Details">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Your Investor Details</t>
            <h3>Investor Details</h3>
            <form method="post" class="row">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <t t-call="investor_wallet_platform_website.investor_fields">
                    <t t-set="field_class" t-value="'form-group col-lg-6'"/>
                </t>

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <div class="text-center oe_login_buttons pt-3">
                    <button type="submit" class="btn btn-primary btn-block">
                        Envoyer
                    </button>
                </div>
            </form>
        </t>
    </template>


    <template id="investor_company_details" name="Investor Company Details">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Your Investor Details</t>
            <h3>Investor Details</h3>
            <form method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                <h3>Company</h3>
                <div class="row">
                    <t t-call="investor_wallet_platform_website.investor_company_fields">
                        <t t-set="field_class" t-value="'form-group col-lg-6'"/>
                    </t>
                </div>

                <h3>Representative</h3>
                <div class="row">
                    <t t-call="investor_wallet_platform_website.investor_company_representative_fields">
                        <t t-set="field_class" t-value="'form-group col-lg-6'"/>
                    </t>
                </div>

                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <div class="text-center oe_login_buttons pt-3">
                    <button type="submit" class="btn btn-primary btn-block">
                        Envoyer
                    </button>
                </div>
            </form>
        </t>
    </template>

</odoo>
