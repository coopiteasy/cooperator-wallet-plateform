<odoo>
	<record id="view_product_form_wallet_platform" model="ir.ui.view">
	    <field name="name">product.template.share.form</field>
           <field name="model">product.template</field>
           <field name="inherit_id" ref="easy_my_coop.product_template_share_form_view"/>
           <field name="arch" type="xml">
           		<header position="inside">
                    <button name="validation_request" string="Validation request"
                            type="object" attrs="{'invisible':[('validation_requested','=',True)]}"
                            groups="easy_my_coop.group_easy_my_coop_manager"/>
                    <button name="validate" string="Validate"
                            type="object" attrs="{'invisible':['|',('validation_requested','=',False),('validated','=',True)]}"
                            groups="investor_wallet_platform_base.group_platform_wallet_manager"/>
                    <button name="refuse" string="Refused"
                            type="object" attrs="{'invisible':['|',('validation_requested','=',False),('validated','=',True)]}"
                            groups="investor_wallet_platform_base.group_platform_wallet_manager"/>
           			<field name="state" widget="statusbar" statusbar_visible="open,close,waiting" options="{'clickable': '1'}"/>
           		</header>
                <field name="force_min_qty" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="minimum_quantity" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
	    		<xpath expr="//div[@name='options']/.." position="after">
	    			<group attrs="{'invisible': [('is_share','=',False)]}">
	    				<group>
	    					<field name="lst_price" readonly="True"/>
	    					<field name="book_value" readonly="True"/>
                            <field name="subscription_start_date" readonly="True"/>
                            <field name="subscription_end_date" readonly="True"/>
                            <field name="subscription_length" readonly="True"/>
	    				</group>
	    				<group>
                            <field name="write_date"/>
                            <field name="validation_requested"/>
                            <field name="validated"/>
                            <field name="validation_date"/>
                            <field name="validated_by"/>
	    				</group>
	    			</group>
	    		</xpath>
                <field name="mail_template" position="after"/>
	    		<field name="short_name" position="before">
	    			<field name="structure"/>
	    			<field name="solidary"/>
	    			<field name="banking"/>
	    			<field name="lst_price" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}" attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"/>
	    			<field name="book_value" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
	    		</field>
	    		<field name="short_name" position="after">
		    		<field name="default_code"/>
	    		</field>
	    			<group name="configuration" position="after">
		    			<group name="limit" string="Limit">
		    				<field name="minimum_amount" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
		    				<field name="maximum_amount" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            <field name="min_target_issue" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
    						<field name="max_target_issue" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
    						<field name="subscription_start_date"/>
    						<field name="subscription_end_date"/>
    						<field name="subscription_length"/>
		    			</group>
		    			<group name="terms" string="Terms">
		    				<field name="access_terms"/>
		    				<field name="price_fluctuation_risk"/>
		    				<field name="purpose_of_issue"/>
		    				<field name="capital_risk"/>
		    				<field name="other_product_risk"/>
		    				<field name="transfer_allowed"/>
		    				<field name="refund_policy"/>
		    			</group>
		    		</group>
	    		<page name="general_information" position="attributes">
	    			<attribute name="attrs">{'invisible': [('is_share','=',True)]}</attribute>
	    		</page>
	    		<page name="share_information" position="after">
	    			<page string="Issue Information" name="issue_information" attrs="{'invisible':[('is_share','=',False)]}">
	    				<group>
	    					<group>
			    				<field name="tax_benefit"/>
			    				<field name="tax_policy"/>
			    				<field name="fees"/>
		    					<field name="dividend_policy"/>
		    				</group>
		    				<group>
			    				<field name="info_note_url"/>
			    				<field name="voting_rights"/>
			    				<field name="advantages"/>
			    				<field name="oversubscription_policy"/>
		    				</group>
	    				</group>
	    				
	    			</page>
	    		</page>
		   </field>
	</record>

	<record id="view_product_template_form_iwp" model="ir.ui.view">
	    <field name="name">product.template.share.form</field>
           <field name="model">product.template</field>
           <field name="inherit_id" ref="product.product_template_only_form_view"/>
           <field name="arch" type="xml">
	    		<field name="default_code" position="attributes">
	    			<attribute name="attrs">{'readonly': [('is_share','=',True)]}</attribute>
	    		</field>
		   </field>
	</record>
</odoo>
